<div class="modal-dialog  modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="titleModal"></h5>
        </div>
        <div class="modal-body">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <label for="name" class="form-label">Nombre</label>
                        <input type="text" class="form-control" tabindex="1" id="name" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-5">
                        <label for="userName" class="form-label">Usuario</label>
                        <input type="text" class="form-control" tabindex="2" id="userName" />
                    </div>
                    <div class="col-md-5">
                        <label for="password" class="form-label">Contraseña</label>
                        <input type="password" class="form-control" tabindex="3" id="password" />
                    </div>
                    <div class="col-md-2">
                        <label for="status" class="form-label">Activo</label>
                        <input type="checkbox" id="status" />
                    </div>
                </div>
            </div>
        </div>

        <div class="modal-footer">
            <button type="button" class="btn btn-primary" id="saveButton">Guardar</button>
            <button type="button" class="btn btn-secondary" id="closeButton">Cerrar</button>
        </div>

    </div>
</div>